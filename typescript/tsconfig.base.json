        "libs/protocol/json/system/src/index.ts"
      ],
      "@allors/workspace/adapters/json/system": [
        "libs/workspace/adapters/json/system/src/index.ts"
      ],
      "@allors/workspace/adapters/json/system-tests": [
        "libs/workspace/adapters/json/system-tests/src/index.ts"
      ],
      "@allors/workspace/domain/core": [
        "libs/workspace/domain/core/src/index.ts"
      ],
      "@allors/workspace/domain/core-custom": [
        "libs/workspace/domain/core-custom/src/index.ts"
      ],
      "@allors/workspace/domain/core-generated": [
        "libs/workspace/domain/core-generated/src/index.ts"
      ],
      "@allors/workspace/domain/core-tests": [
        "libs/workspace/domain/core-tests/src/index.ts"
      ],
      "@allors/workspace/domain/system": [
        "libs/workspace/domain/system/src/index.ts"
