{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@allors/protocol/json/system": [
        "libs/protocol/json/system/src/index.ts"
      ],
      "@allors/workspace/system": ["libs/workspace/system/src/index.ts"],
      "@allors/workspace/meta/lazy/system": [
        "libs/workspace/meta/lazy/system/src/index.ts"
      ],
      "@allors/workspace/meta/core": ["libs/workspace/meta/core/src/index.ts"],
      "@allors/workspace/meta/generated": [
        "libs/workspace/meta/generated/src/index.ts"
      ],
      "@allors/workspace/meta/tests": [
        "libs/workspace/meta/tests/src/index.ts"
      ],
      "@allors/workspace/domain/core": [
        "libs/workspace/domain/core/src/index.ts"
      ],
      "@allors/workspace/domain/custom": [
        "libs/workspace/domain/custom/src/index.ts"
      ],
      "@allors/workspace/domain/generated": [
        "libs/workspace/domain/generated/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
