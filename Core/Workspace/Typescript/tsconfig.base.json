{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@allors/data/system": ["libs/data/system/src/index.ts"],
      "@allors/domain/custom": ["libs/domain/custom/src/index.ts"],
      "@allors/meta/system": ["libs/meta/system/src/index.ts"],
      "@allors/protocol/system": ["libs/protocol/system/src/index.ts"],
      "@allors/workspace/memory": ["libs/workspace/memory/src/index.ts"],
      "@allors/workspace/system": ["libs/workspace/system/src/index.ts"],
      "@allors/workspace/tests": ["libs/workspace/tests/src/index.ts"],
      "@allors/client/tests": ["libs/client/tests/src/index.ts"],
      "@allors/client/fetch": ["libs/client/fetch/src/index.ts"],
      "@allors/meta/tests": ["libs/meta/tests/src/index.ts"],
      "@allors/domain/generated": ["libs/domain/generated/src/index.ts"],
      "@allors/meta/generated": ["libs/meta/generated/src/index.ts"]
    },
    "preserveSymlinks": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tmp"]
}
