index(meta) ::= <<
// Allors generated file.
// Do not edit this file, changes will be overwritten.

$meta.Composites:{composite|export { $composite.name$ \} from './$composite.name$.g';}; separator="\n"$

>>

composite(meta, objectType) ::= <<
// Allors generated file.
// Do not edit this file, changes will be overwritten.
/* tslint:disable */
import { WorkspaceObject, Method } from '@allors/domain/system';

$objectType.RelatedComposites:{directSupertype|import { $directSupertype.SingularName$ \} from './$directSupertype.SingularName$.g';}; separator="\n"$

export interface $objectType.name$ extends WorkspaceObject$if(objectType.DirectSupertypes)$, $objectType.DirectSupertypes:{directSupertype|$directSupertype.SingularName$}; separator=", "$$endif$ {

    // Database
$objectType.ExclusiveRoleTypesWithDatabaseOrigin:{roleType|$roleTypeWithDatabaseOrigin()$}; separator="\n"$

$objectType.ExclusiveAssociationTypesWithDatabaseOrigin:{associationType|$associationTypes()$}; separator="\n"$

$objectType.MethodTypes:{methodType|$methodType()$}; separator="\n"$

    // Workspace
$objectType.ExclusiveRoleTypesWithWorkspaceOrigin:{roleType|$roleTypeWithWorkspaceOrigin()$}; separator="\n"$

$objectType.ExclusiveAssociationTypesWithWorkspaceOrigin:{associationType|$associationTypes()$}; separator="\n"$
}
>>

roleTypeWithDatabaseOrigin() ::= <<

    CanRead$roleType.PropertyName$: boolean;

$if(roleType.ObjectType.IsUnit)$
    readonly $roleType.PropertyName$: $objectType_Name(roleType.ObjectType)$ | null;
$else$
$if(roleType.IsOne)$
    readonly $roleType.PropertyName$: $objectType_Name(roleType.ObjectType)$ | null;
$else$
    readonly $roleType.PluralPropertyName$: $objectType_Name(roleType.ObjectType)$[];
$endif$
$endif$
>>

roleTypeWithWorkspaceOrigin() ::= <<
$if(roleType.ObjectType.IsUnit)$
    $roleType.PropertyName$: $objectType_Name(roleType.ObjectType)$ | null;
$else$
$if(roleType.IsOne)$
    $roleType.PropertyName$: $objectType_Name(roleType.ObjectType)$ | null;
$else$
    $roleType.PluralPropertyName$: $objectType_Name(roleType.ObjectType)$[];
    Add$roleType.SingularPropertyName$(value: $objectType_Name(roleType.ObjectType)$) : void;
    Remove$roleType.SingularPropertyName$(value: $objectType_Name(roleType.ObjectType)$) : void;
$endif$
$endif$
>>

associationTypes() ::= <<

$if(associationType.IsOne)$
    $associationType.PropertyName$ : $objectType_Name(associationType.ObjectType)$ | null;
$else$
    $associationType.PropertyName$ : $objectType_Name(associationType.ObjectType)$[];
$endif$
>>


methodType() ::= <<
    CanExecute$methodType.Name$: boolean;
    $methodType.Name$: Method;

>>

objectType_Name(objectType) ::= <%
$if(objectType.IsUnit)$
$if(objectType.IsBinary)$
any
$elseif(objectType.IsBoolean)$
boolean
$elseif(objectType.IsDecimal)$
string
$elseif(objectType.IsDateTime)$
string
$elseif(objectType.IsFloat)$
number
$elseif(objectType.IsInteger)$
number
$elseif(objectType.IsString)$
string
$elseif(objectType.IsUnique)$
string
$else$
throw 'Unknown unit type';
$endif$
$else$
$objectType.SingularName$
$endif$
%>
