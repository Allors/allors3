{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@allors/data/system": ["libs/data/system/src/index.ts"],
      "@allors/meta/system": ["libs/meta/system/src/index.ts"],
      "@allors/meta/generated": ["libs/meta/generated/src/index.ts"],
      "@allors/meta/core": ["libs/meta/core/src/index.ts"],
      "@allors/protocol/system": ["libs/protocol/system/src/index.ts"],
      "@allors/session/generated": ["libs/session/generated/src/index.ts"],
      "@allors/session/base": ["libs/session/base/src/index.ts"],
      "@allors/session/custom": ["libs/session/custom/src/index.ts"],
      "@allors/domain/memory": ["libs/domain/memory/src/index.ts"],
      "@allors/domain/system": ["libs/domain/system/src/index.ts"]
    },
    "preserveSymlinks": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tmp"]
}
